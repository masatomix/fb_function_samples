{
  "extends": ["eslint:recommended"],
  "plugins": [],
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion":  2017
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {},
  "rules": {
    "semi": ["warn", "never", { "beforeStatementContinuationChars": "never" }],
    "no-console": "off",
    "no-unused-vars": "off",
    "quotes": ["warn", "single"]
  }
}
